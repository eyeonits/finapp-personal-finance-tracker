# FinApp API Environment Configuration
# Copy this file to .env and fill in the values
# DO NOT commit .env to git!

# Environment
ENVIRONMENT=development

# Database Configuration
# Local development:
DATABASE_URL=postgresql+asyncpg://finapp:your_password@localhost:5432/finapp_dev
# AWS RDS (after deployment):
# DATABASE_URL=postgresql+asyncpg://finapp_admin:your_password@your-rds-endpoint.region.rds.amazonaws.com:5432/finapp

# =============================================================================
# Authentication Mode
# =============================================================================
# Set to "true" to use AWS Cognito, "false" for local authentication (default)
# Local auth is simpler for development - no Cognito setup required!
USE_COGNITO=false

# -----------------------------------------------------------------------------
# Local Authentication Settings (used when USE_COGNITO=false)
# -----------------------------------------------------------------------------
# Secret key for signing JWT tokens (auto-generated in dev if not set)
# IMPORTANT: Set a strong secret in production!
JWT_SECRET_KEY=your-secret-key-change-in-production

# Token expiration settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# -----------------------------------------------------------------------------
# AWS Cognito Settings (only required when USE_COGNITO=true)
# -----------------------------------------------------------------------------
# Uncomment and fill in when using Cognito:
# COGNITO_REGION=us-east-1
# COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
# COGNITO_APP_CLIENT_ID=your_app_client_id
# COGNITO_APP_CLIENT_SECRET=your_app_client_secret

# =============================================================================
# Other Settings
# =============================================================================

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional Settings
DEBUG=false
LOG_LEVEL=INFO
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
RATE_LIMIT_PER_MINUTE=100
