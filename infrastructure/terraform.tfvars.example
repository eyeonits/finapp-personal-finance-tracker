# Copy this file to terraform.tfvars and fill in the values
# DO NOT commit terraform.tfvars to git!

# Environment
environment = "dev"
aws_region  = "us-east-1"

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
db_instance_class    = "db.t4g.micro"  # Free tier eligible
db_allocated_storage = 20              # Free tier: up to 20GB
db_name              = "finapp"
db_username          = "finapp_admin"
db_password          = "CHANGE_ME_TO_A_STRONG_PASSWORD"

# Set to true if you need to connect from your local machine
db_publicly_accessible = false

# Your IP address for direct database access (find yours at https://whatismyip.com)
# Leave empty to disable external access
allowed_ip = ""

# -----------------------------------------------------------------------------
# Lambda Configuration
# -----------------------------------------------------------------------------
lambda_memory_size = 512   # MB (128-10240), higher = faster cold starts
lambda_timeout     = 30    # seconds (max 900)

# CORS origins (comma-separated)
# Update with your CloudFront URL after frontend deployment
cors_origins = "http://localhost:3000,http://localhost:5173"

# -----------------------------------------------------------------------------
# Custom Domain Configuration (Optional)
# -----------------------------------------------------------------------------
# Leave domain_name empty to use AWS default domains (*.cloudfront.net, *.execute-api.amazonaws.com)

# Your domain name (must be registered in Route 53 or have DNS access)
domain_name = ""  # e.g., "myfinapp.com"

# Subdomain for frontend (empty = root domain)
frontend_subdomain = ""  # e.g., "app" for app.myfinapp.com, or "" for myfinapp.com

# Subdomain for API
api_subdomain = "api"  # e.g., "api" for api.myfinapp.com

# Set to false if your domain is NOT in Route 53 (you'll need to manually add DNS records)
use_route53 = true

